@model IEnumerable<SuaNhaMVC.Models.Service>

@{
    ViewData["Title"] = "Dịch vụ sửa chữa nhà cửa";
}

<!-- Header -->
<section class="bg-white shadow-sm">
    <div class="container py-5">
        <div class="text-center">
            <h1 class="display-5 fw-bold text-dark mb-4">Dịch Vụ Sửa Chữa Nhà Cửa</h1>
            <p class="lead text-muted mb-5">Chúng tôi cung cấp đầy đủ các dịch vụ sửa chữa và cải tạo nhà cửa chuyên nghiệp</p>
            
            <!-- Search and Filter -->
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <form method="get" class="row g-3">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" 
                                       class="form-control" placeholder="Tìm kiếm dịch vụ...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-filter"></i></span>
                                <select name="category" class="form-select">
                                    <option value="all">Tất cả danh mục</option>
                                    @foreach (var cat in ViewBag.Categories as List<string>)
                                    {
                                        <option value="@cat" selected="@(ViewBag.SelectedCategory == cat)">@cat</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-search me-2"></i>Tìm kiếm
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Grid -->
<section class="py-5 bg-light">
    <div class="container">
        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Không tìm thấy dịch vụ nào phù hợp</h4>
                <p class="text-muted">Vui lòng thử lại với từ khóa khác</p>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var service in Model)
                {
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="card h-100 shadow-sm border-0 service-card">
                            <div class="position-relative">
                                <img src="@service.ImageUrl" class="card-img-top" alt="@service.Name" 
                                     style="height: 200px; object-fit: cover;">
                                <span class="badge bg-primary position-absolute top-0 end-0 m-2">@service.Category</span>
                            </div>
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@service.Name</h5>
                                <p class="card-text text-muted flex-grow-1">@service.Description</p>
                                
                                <!-- Rating -->
                                <div class="mb-3">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    <small class="text-muted ms-2">(4.8)</small>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mt-auto">
                                    <div>
                                        <small class="text-muted">Từ</small>
                                        <div class="fw-bold text-warning fs-4">@service.Price.ToString("N0")đ</div>
                                    </div>
                                    <a asp-controller="Booking" asp-action="Index" asp-route-serviceId="@service.Id" 
                                       class="btn btn-primary">
                                        <i class="fas fa-calendar-alt me-1"></i>Đặt ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

<!-- CTA Section -->
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Không Tìm Thấy Dịch Vụ Phù Hợp?</h2>
        <p class="lead mb-4">Liên hệ với chúng tôi để được tư vấn dịch vụ phù hợp nhất</p>
        <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
            <a href="tel:19001234" class="btn btn-warning btn-lg px-4">
                <i class="fas fa-phone me-2"></i>Gọi ngay: 1900-1234
            </a>
            <a asp-controller="Booking" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                <i class="fas fa-calendar-alt me-2"></i>Đặt lịch tư vấn
            </a>
        </div>
    </div>
</section>

<style>
.service-card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
}
</style>